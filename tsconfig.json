{
	"compilerOptions": {
		"target": "ES5",
		"module": "ESNext",
		"allowJs": true,
		"jsx": "react",
		"noEmit": true,
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": [
				"src/components/*"
			],
			"@pages/*": [
				"src/pages/*"
			],
		}
	},
	"include": [
		"src",
		"webpack.config.js"
	]
}